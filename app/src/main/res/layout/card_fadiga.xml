<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    tools:context="com.example.grqueiroz.lupus_tcc.CardFragment"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/fragment_container_card"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:visibility="visible"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp" />

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/card_fadiga_content"
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:layout_marginTop="8dp"
        android:fillViewport="true"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <me.biubiubiu.justifytext.library.JustifyTextView
                android:id="@+id/title_card_fadiga"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="@string/title_card_fadiga"
                android:textColor="@color/colorAccent"
                android:textSize="26sp"
                tools:layout_editor_absoluteY="8dp" />

            <me.biubiubiu.justifytext.library.JustifyTextView
                android:id="@+id/card_fadiga_paragraph1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/card_fadiga_paragraph1"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"/>

            <ImageView
                android:id="@+id/t4_2f1"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                app:srcCompat="@drawable/t4_2f1" />

            <me.biubiubiu.justifytext.library.JustifyTextView
                android:id="@+id/card_fadiga_paragraph2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/card_fadiga_paragraph2"
                android:textAlignment="viewStart"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp" />

            <me.biubiubiu.justifytext.library.JustifyTextView
                android:id="@+id/card_fadiga_paragraph3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/card_fadiga_paragraph3"
                android:textAlignment="viewStart"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"/>

            <me.biubiubiu.justifytext.library.JustifyTextView
                android:id="@+id/card_fadiga_paragraph4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/card_fadiga_paragraph4"
                android:textAlignment="viewStart"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"/>

            <Button
                android:id="@+id/subtopic1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="Link para subtopico1" />

            <!--<Button-->
                <!--android:id="@+id/subtopic2"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginTop="20dp"-->
                <!--android:gravity="center"-->
                <!--android:text="Link para subtopico2" />-->
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>
